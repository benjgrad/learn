---
interface Props {
  question: string;
}

const { question } = Astro.props;
---

<aside class="learning-block predict-block" aria-label="Calibration check">
  <div class="learning-block-header">
    <span class="learning-block-icon">
      <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="12" cy="12" r="10" />
        <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3" />
        <line x1="12" y1="17" x2="12.01" y2="17" />
      </svg>
    </span>
    <h4 class="learning-block-title">Calibration Check</h4>
  </div>
  <div class="learning-block-content">
    <p>{question}</p>
    <details class="calibration-reveal">
      <summary>Check Your Understanding</summary>
      <div class="calibration-answer">
        <slot />
      </div>
    </details>
  </div>
</aside>

<style>
  .calibration-reveal {
    margin-top: 1rem;
    border-top: 1px solid rgb(245 158 11 / 0.2);
    padding-top: 0.5rem;
  }

  .calibration-reveal summary {
    cursor: pointer;
    font-weight: 600;
    font-size: 0.9rem;
    color: var(--lb-border, #f59e0b);
    padding: 0.25rem 0;
    user-select: none;
  }

  .calibration-reveal summary:hover {
    opacity: 0.8;
  }

  .calibration-answer {
    margin-top: 0.75rem;
  }
</style>
