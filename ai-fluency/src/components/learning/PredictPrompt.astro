---
interface Props {
  prompt: string;
}

const { prompt } = Astro.props;
---

<aside class="learning-block predict-block" aria-label="Prediction exercise">
  <div class="learning-block-header">
    <span class="learning-block-icon">
      <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 1 1 7.072 0l-.548.547A3.374 3.374 0 0 0 14 18.469V19a2 2 0 1 1-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
      </svg>
    </span>
    <h4 class="learning-block-title">Before You Begin</h4>
  </div>
  <div class="learning-block-content">
    <p>{prompt}</p>
    <p class="predict-instruction">Take a moment to form your prediction before reading on. This activates prior knowledge and strengthens learning.</p>
  </div>
</aside>

<style>
  .predict-instruction {
    font-size: 0.875rem;
    font-style: italic;
    opacity: 0.8;
    margin-top: 0.5rem;
  }
</style>
