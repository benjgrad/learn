---
import levels from '../../data/levels.json';

interface Level {
  number: number;
  title: string;
  slug: string;
  color: string;
  description: string;
}

const typedLevels = levels as Level[];
const currentPath = Astro.url.pathname;
---

<nav class="level-map" aria-label="AI Fluency level progression">
  <h2 class="level-map__heading">Learning Progression</h2>
  <ol class="level-map__track">
    {typedLevels.map((level, index) => {
      const href = level.number === 0 ? '/foundations/' : `/level-${level.number}/`;
      const isCurrent = currentPath.startsWith(href);
      return (
        <li class="level-map__node-wrapper">
          {index > 0 && <span class="level-map__connector" aria-hidden="true" />}
          <a
            href={href}
            class:list={['level-map__node', { 'level-map__node--current': isCurrent }]}
            style={`--level-color: ${level.color};`}
            aria-current={isCurrent ? 'step' : undefined}
          >
            <span class="level-map__number">{level.number === 0 ? 'F' : level.number}</span>
            <span class="level-map__title">{level.title}</span>
          </a>
        </li>
      );
    })}
  </ol>
</nav>

<style>
  .level-map {
    padding: 1.5rem 0;
  }

  .level-map__heading {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--sl-color-gray-3);
    margin-bottom: 1rem;
  }

  .level-map__track {
    display: flex;
    flex-direction: column;
    gap: 0;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .level-map__node-wrapper {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .level-map__connector {
    display: block;
    width: 2px;
    height: 1.25rem;
    margin-left: 1.25rem;
    background: var(--sl-color-gray-5);
  }

  .level-map__node {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.5rem 0.75rem;
    border-radius: 0.5rem;
    text-decoration: none;
    color: var(--sl-color-white);
    transition: background-color 0.15s ease, transform 0.15s ease;
    width: 100%;
  }

  .level-map__node:hover {
    background-color: color-mix(in srgb, var(--level-color) 15%, transparent);
    transform: translateX(2px);
  }

  .level-map__node--current {
    background-color: color-mix(in srgb, var(--level-color) 20%, transparent);
    outline: 2px solid var(--level-color);
    outline-offset: -2px;
  }

  .level-map__number {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    border-radius: 50%;
    background-color: var(--level-color);
    color: #fff;
    font-weight: 700;
    font-size: 0.8rem;
    flex-shrink: 0;
  }

  .level-map__title {
    font-size: 0.85rem;
    font-weight: 500;
    line-height: 1.3;
  }

  /* Horizontal layout on wider screens */
  @media (min-width: 60rem) {
    .level-map__track {
      flex-direction: row;
      align-items: center;
      gap: 0;
      overflow-x: auto;
      padding-bottom: 0.5rem;
    }

    .level-map__node-wrapper {
      flex-direction: row;
      align-items: center;
    }

    .level-map__connector {
      width: 1.5rem;
      height: 2px;
      margin-left: 0;
    }

    .level-map__node {
      flex-direction: column;
      text-align: center;
      gap: 0.375rem;
      padding: 0.625rem 0.5rem;
      min-width: 5.5rem;
      width: auto;
    }

    .level-map__node:hover {
      transform: translateY(-2px);
    }

    .level-map__title {
      font-size: 0.75rem;
    }
  }
</style>
